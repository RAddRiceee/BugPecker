<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.githubApp.dao.UserOAuthDao">
    <!--<resultMap id="UserOAuth" type="">-->
        <!--<id column="user_id" property="userId"/>-->
        <!--<result column="user_name" property="userName"/>-->
        <!--<result column="access_token" property="accessToken"/>-->
        <!--<result column="repo_list" property="repoList"/>-->
    <!--</resultMap>-->

    <select id="getUserName" resultType="java.lang.String">
        SELECT user_name FROM UserOAuth
        WHERE user_name = #{userName}
    </select>

    <select id="getAccessTokenByName" resultType="java.lang.String">
        SELECT access_token FROM UserOAuth
        WHERE user_name = #{userName}
    </select>

    <insert id="createAccessToken">
        insert into UserOAuth (user_name,access_token) values (#{userName},#{accessToken})
    </insert>

    <update id="updateAccessToken">
        update UserOAuth set access_token=#{accessToken} where user_name = #{userName}
    </update>

    <select id="getRepoListByName" resultType="java.lang.String">
        SELECT repo_list FROM UserOAuth
        WHERE user_name = #{userName}
    </select>

    <insert id="insertRepoList">
        insert into UserOAuth (user_name,repo_list) values (#{userName},#{repoList})
    </insert>

    <update id="updateRepoList">
        update UserOAuth set repo_list=#{repoList} where user_name = #{userName}
    </update>
</mapper>